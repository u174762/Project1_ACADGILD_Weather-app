<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >


    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hyderabad,India"
        android:id="@+id/citytext"
        android:textStyle="bold"
        android:textSize="42sp"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/thumbnailicon"
        android:background="@color/colorAccent"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/citytext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12 deg"
        android:textSize="42dp"
        android:id="@+id/temptext"
        android:layout_alignTop="@+id/thumbnailicon"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="wind"
        android:textSize="24dp"
        android:id="@+id/windtext"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/thumbnailicon"
        android:layout_alignEnd="@+id/pressuretext" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cloud"
        android:textSize="24dp"
        android:id="@+id/cloudtext"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/windtext"
        android:layout_alignEnd="@+id/windtext" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="pressure"
        android:textSize="24dp"
        android:id="@+id/pressuretext"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/cloudtext"
        android:layout_alignEnd="@+id/citytext" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Humidity"
        android:textSize="24dp"
        android:layout_marginTop="5dp"
        android:id="@+id/humidiytext"
        android:layout_below="@+id/pressuretext"
        android:layout_alignEnd="@+id/pressuretext" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:text="Sunrise"
    android:textSize="24dp"
    android:id="@+id/Sunrisetext"
    android:layout_marginTop="5dp"
    android:layout_below="@+id/humidiytext"
        android:layout_alignEnd="@+id/humidiytext" />
    <TextView
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:text="Sunset"
   android:textSize="24dp"
   android:id="@+id/sunsettext"
   android:layout_marginTop="5dp"
   android:layout_below="@+id/Sunrisetext"
        android:layout_alignEnd="@+id/Sunrisetext" />
<TextView
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:text="Last updated"
   android:id="@+id/lastupdated"
   android:textSize="16sp"
   android:layout_below="@+id/sunsettext"
   android:layout_marginTop="42dp" />

    </RelativeLayout>
